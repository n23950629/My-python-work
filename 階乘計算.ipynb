    "print(\"請問想知道幾階呢？\")\n",
    "\n",
    "def fact(n):\n",
    "    if n == 1:\n",
    "        return 1\n",
    "    else:\n",
    "        return n*fact(n-1)\n",
    "\n",
    "n = int(input('請輸入數字：'))\n",
    "\n",
    "print (str(n)+'！爲：', fact(n))"
